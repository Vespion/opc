{
	"name": "opc",
	"version": "0.0.0-development",
	"description": "Open, edit and manipulate packages using the Open Packaging Conventions",
	"keywords": [
		"opc",
		"packaging",
		"open packaging conventions",
		"office",
		"package"
	],
	"license": "MIT",
	"packageManager": "pnpm@8.6.3",
	"engines": {
		"pnpm": ">=8",
		"node": ">=14.6"
	},
	"author": {
		"email": "21206333+Vespion@users.noreply.github.com",
		"name": "Vespion",
		"homepage": "https://github.com/vespion"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vespion/opc"
	},
	"bugs": {
		"url": "https://github.com/Vespion/opc/issues"
	},
	"files": [
		"dist",
		"package.json"
	],
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsup ./src",
		"pretest": "rimraf ./test_out && tsc -p tsconfig.tests.json",
		"test": "ava",
		"cover": "pnpm run pretest && pnpm c8 ava",
		"lint": "eslint --ignore-path .gitignore --cache-location node_modules/.cache/eslint/ --cache .",
		"format": "prettier .",
		"release": "semantic-release"
	},
	"dependencies": {
		"whatwg-mimetype": "3.0.0"
	},
	"devDependencies": {
		"@ava/typescript": "4.0.0",
		"@eslint/eslintrc": "2.0.3",
		"@eslint/js": "^8.43.0",
		"@fast-check/ava": "1.1.5",
		"@types/node": "20.3.1",
		"@types/whatwg-mimetype": "3.0.0",
		"@typescript-eslint/eslint-plugin": "5.60.0",
		"@typescript-eslint/parser": "5.60.0",
		"ava": "5.3.1",
		"c8": "8.0.0",
		"eslint": "8.43.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-formatter-github": "1.1.4",
		"eslint-plugin-ava": "14.0.0",
		"eslint-plugin-deprecation": "1.4.1",
		"eslint-plugin-eslint-plugin": "5.1.0",
		"eslint-plugin-json-schema-validator": "4.5.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-regexp": "1.15.0",
		"eslint-plugin-security": "1.7.1",
		"eslint-plugin-yaml": "0.5.0",
		"memfs": "4.2.0",
		"prettier": "2.8.8",
		"rimraf": "5.0.1",
		"ts-results": "3.3.0",
		"tsup": "7.1.0",
		"typescript": "5.1.3"
	},
	"prettier": {
		"arrowParens": "avoid",
		"useTabs": true,
		"endOfLine": "auto",
		"semi": true,
		"singleQuote": false,
		"trailingComma": "none"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:security/recommended",
			"plugin:promise/recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:ava/recommended",
			"plugin:json-schema-validator/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"deprecation"
		],
		"overrides": [
			{
				"files": [
					"*.yaml",
					"*.yml"
				],
				"plugins": [
					"yaml"
				],
				"extends": [
					"plugin:yaml/recommended"
				]
			}
		]
	},
	"ava": {
		"files": [
			"tests/**/*.test.ts",
			"!tests/MockFsPackage"
		],
		"extensions": {
			"js": true
		},
		"typescript": {
			"rewritePaths": {
				"tests/": "test_out/tests/"
			},
			"compile": false
		}
	}
}
